{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-4">
                <img src="{{ asset('images/ChatTech.png') }}" alt="Logo ChatTech" class="mb-4" style="max-width: 200px; height: auto;">
                <h1>Créer un nouveau compte</h1>
            </div>

            <div class="card shadow bg-dark">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                    <div class="mb-3">
                        {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse électronique'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom complet'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.birthday, {'attr': {'class': 'form-control', 'placeholder': 'Date de naissance'}}) }}
                    </div>
                    <div class="mb-4">
                        <label class="d-block">Sexe</label>
                        <div class="form-check form-check-inline">
                            {{ form_widget(form.sexe[0], {'attr': {'class': 'form-check-input'}}) }}
                            <label class="form-check-label" for="{{ form.sexe[0].vars.id }}">Homme</label>
                        </div>
                        <div class="form-check form-check-inline">
                            {{ form_widget(form.sexe[1], {'attr': {'class': 'form-check-input'}}) }}
                            <label class="form-check-label" for="{{ form.sexe[1].vars.id }}">Femme</label>
                        </div>
                    </div>
                    <div class="mb-3 text-center">
                        <button type="submit" class="btn btn-primary">S'inscrire</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

