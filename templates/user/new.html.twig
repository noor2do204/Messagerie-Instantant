{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="login-container">
    <div class="login-brand">
        <img src="/img/ChatTech.png" alt="ChatTech Logo">
    </div>

<div class="d-flex flex-column align-items-center justify-content-center vh-100" style="background-color: #121212;"> <!-- Fond sombre -->
    <div class="register-form shadow-lg p-5 mb-5 bg-dark rounded"> 
        <h1 class="text-center mb-4 w-100">Créer un nouveau compte</h1> 
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse électronique'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom complet'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.birthday, {'attr': {'class': 'form-control', 'placeholder': 'Date de naissance'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(form.sexe) }}
        </div>
        <div class="d-grid gap-2">
            <button class="btn btn-primary" type="submit">S'inscrire</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-color: #121212;
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            color: white;
        }
        .login-container {
            margin-top: 5vh; 
            margin-bottom: 5vh; 
            display: flex;
            flex-direction: column;
            justify-content: center; 
            height: 90vh; 
            background-color: #121212; 
        }
        .login-brand {
            text-align: center;
            margin-bottom: 2rem;
        }
        .login-brand img {
            max-width: 200px;
            height: auto;
        }
        .register-form {
            max-width: 320px;
            margin: auto;
            padding: 2rem;
            background-color: #333;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .register-form .form-control[type="date"] {
            appearance: none; 
            padding: 8px;
            border: 1px solid #555; 
            border-radius: 4px;
            background-color: #222; 
            color: white; 
        }
        .register-form h1 {
            margin-bottom: 2rem;
            font-size: 1.5rem;
            color: #8a8a8a;
        }
        .register-form .form-control {
            background-color: #222;
            border: none;
            margin-bottom: 1rem;
            height: 40px;
            color: white;
            border-radius: 4px;
            padding: 8px;
            width: 100%;
        }
        .register-form button {
            width: 100%;
            border: none;
            padding: 10px;
            margin-bottom: 1rem;
            border-radius: 4px;
            cursor: pointer;
        }
        .register-form .btn-primary {
            background-color: #0b93f6;
        }
        .register-form .btn-secondary {
            background-color: #4a4a4a;
        }
        .alert {
            background-color: #f44336;
            color: white;
            padding: 10px;
            margin-bottom: 1rem;
            border: none;
            border-radius: 4px;
        }
    </style>
{% endblock %}